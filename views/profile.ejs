<link rel="stylesheet" href="/css/profile.css">

<% if(locals.user) { %>

<div class="profile-container">

  <!-- Profile Container Starts -->

  <a href="/">
    <button type="button" class="btn back-btn">
      <i class="fa-solid fa-circle-arrow-left fa-2xl"></i>
    </button>
  </a> 

<div class="card mb-3 text-bg-light border-info" style="max-width: 540px;">
  <div class="card-header bg-transparent border-info">
  </div>
    <div class="row g-0 card-main" >
      <div class="col-md-4">
        <img src="<%= user.avatar %>"  class="profile-img img-fluid rounded-start" alt="<%= user.name %>">
      </div>
      <div class="col-md-8">
        <div class="card-body">

          <h4 class="card-title">Name:</h4>
          <p class="card-text"><%= profile_user.name%></p>

          <h4 class="card-title">Email:</h4>
          <p class="card-text"><%= profile_user.email%></p>

        </div>
      </div>
    </div>

    <div class="card-footer bg-transparent border-info">
      <% if(locals.user.id == profile_user.id){ %>

        <button type="button" class="edit-profile-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">
          <i class="fa-solid fa-pen-to-square"></i>
        </button>
        
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/users/update/<%= profile_user.id%>"
                  enctype="multipart/form-data"
                  method="POST">
                  <div class="mb-3">
                    <label for="name" class="col-form-label">Enter Your Name:</label>
                    <input type="text" class="form-control" id="name" name="name"
                    placeholder="Your Name"
                    value="<%= profile_user.name %>"
                    required>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="col-form-label">Enter Your Email:</label>
                    <input type="email"  class="form-control" id="email" name="email" placeholder="Your Email"
                    value="<%= profile_user.email %>"
                    required></input>
                  </div>
                  <div class="mb-3">
                    <label for="profile-picture" class="col-form-label">Select Profile Picture:</label>
                    <input type="file" class="form-control" id="profile-picture" name="avatar" placeholder="Profile Picture" required>
                  </div>
        
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
        
                </form>
              </div>
            </div>
          </div>
        </div>
        
        <% } %>
        
    </div>
  </div>

  <!-- Profile Container Ends -->

</div>

<% } %>